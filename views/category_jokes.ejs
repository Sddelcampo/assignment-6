<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= category %> Jokes</title>
    <link rel="stylesheet" href="/styles.css">
</head>
<body>
    <div class="container">
        <h1>Jokes for <%= category %></h1>

        <% if (message) { %>
            <p class="message"><%= message %></p>  <!-- Display the message if there are no jokes -->
        <% } else { %>
            <% if (jokes && jokes.length > 0) { %>
                <ul>
                    <% jokes.forEach(function(joke) { %>
                        <li>
                            <p><strong>Setup:</strong> <%= joke.setup %></p>
                            <p><strong>Delivery:</strong> <%= joke.delivery %></p>
                        </li>
                    <% }); %>
                </ul>
            <% } else { %>
                <p>No jokes found for this category.</p>
            <% } %>
        <% } %>

        <a href="/jokebook/categories">Back to Categories</a>
    </div>
</body>
</html>
